@model CarFuel.Models.FillUp

@{
  ViewBag.Title = "AddFillUp";
}

<h2>Add Fill Up</h2>

@using (Html.BeginForm(FormMethod.Post)) {
  @Html.AntiForgeryToken()
  <div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Car's name</label>
      <div class="col-md-5">
        <label>@ViewBag.CarName</label>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Odometer</label>
      <div class="col-md-5">
        @Html.TextBoxFor(m => m.Odometer,
                            new { @class = "form-control input-md" })
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Liters</label>
      <div class="col-md-5">
        @Html.TextBoxFor(m => m.Liters,
                            new { @class = "form-control input-md" })
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-4 control-label" for="singlebutton"></label>
      <div class="col-md-4">
        <button type="submit" id="singlebutton" name="singlebutton"
                class="btn btn-primary">
          Add
        </button>
      </div>
    </div>
  </div>
}

<div>
  @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
